= simple_form_for [:admin, @deal], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.input :name
    = f.input :price
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_deals_path, :class => 'btn'
