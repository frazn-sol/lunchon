- model_class = @deal.class
.page-header
  %h1 Admin Section
  %h2=t '.title', :default => model_class.model_name.human

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:name) + ':'
  %dd= @deal.name
  %dt= model_class.human_attribute_name(:price) + ':'
  %dd= number_to_currency @deal.price

%dl.dl-horizontal
  %dt Comments
  %dd --
  - if @comments.any?
    - @comments.each do |comment|
      %dt= comment.contributor
      %dd= comment.message
  - else
    %dd None yet

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_deals_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_deal_path(@deal), :class => 'btn'
  = link_to 'Add Comment',  new_admin_deal_comment_path(@deal), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_deal_path(@deal), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
