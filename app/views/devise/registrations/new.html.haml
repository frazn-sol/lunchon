.row-fluid
  %legend
    Sign Up
    .pull-right= link_to '&times;'.html_safe, root_path
  = devise_error_messages!
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = f.email_field :email, class: 'span6', placeholder: 'Email'
    = f.password_field :password, class: 'span6', placeholder: 'Password'
    = f.password_field :password_confirmation, class: 'span6', placeholder: 'Password Confirmation'
    %button{ type: 'submit', class: 'btn btn-info btn-block', name: 'submit'} Sign Up
  = render "devise/shared/links"
