/ .row-fluid
/   %legend 
/     Resend confirmation instructions
/     .pull-right= link_to '&times;'.html_safe, root_path
/   = render 'devise/shared/flash', flash: flash
/   = simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name),  :defaults => { :input_html => {:class => 'span6'}}, :html => { :method => :post }) do |f|
/     = f.error_notification
/     .form-inputs
/       = f.input :email, :required => true, label: false, placeholder: 'Email'
/     %button{ type: 'submit', class: 'btn btn-info btn-block', name: 'submit'} Resend me confirmation instructions
/   = render "devise/shared/links"
.main
  .popup
    = render 'devise/shared/flash', flash: flash
    .popup-arrow
      %img{:src => "/assets/arrow.png"}/
    .close-btn.glyphicon.glyphicon-remove-circle
    .row
      .col-xs-12
        .col-xs-6.popup-logo.text-center.signin-logo
          %img.img-responsive{:src => "/assets/logo.png"}/
        .col-xs-12.col-sm-6.signup-popup.signin-popup
          = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
            = devise_error_messages!
            .col-xs-8.signin-fields
              = f.email_field :email, placeholder: 'Email'
            .col-xs-4.signin-button
              %input{:type => "submit", :value => "Get Link"}
%div{class: "modal-backdrop fade in"}
