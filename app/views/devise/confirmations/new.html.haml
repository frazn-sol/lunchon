.span6.offset2.well
  %legend Resend confirmation instructions
  = render 'devise/shared/flash', flash: flash
  = simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name),  :defaults => { :input_html => {:class => 'span6'}}, :html => { :method => :post }) do |f|
    = f.error_notification
    .form-inputs
      = f.input :email, :required => true, label: false, placeholder: 'Email'
    %button{ type: 'submit', class: 'btn btn-info btn-block', name: 'submit'} Send me reset password instructions
  = render "devise/shared/links"
