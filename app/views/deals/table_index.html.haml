- model_class = Deal.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @deals.each do |deal|
      %tr
        %td= deal.name
        %td= number_to_currency deal.price
        %td= l deal.created_at, format: :other
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_deal_path(deal), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), deal_path(deal), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

%ul.thumbnails
  - @deals.each do |deal|
    %li.span3
      = link_to deal_path(deal) do
        .thumbmail
          = image_tag "http://placehold.it/260x180" 
        .caption
          = deal.name
= link_to t('.new', :default => t("helpers.links.new")), new_deal_path, :class => 'btn btn-primary'


