!!!
%html
  %head
    %title Lunchon.co
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
  %body.wooden
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container
          %a{ :class => 'btn btn-navbar', 'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to  root_path, class: 'brand' do
            =image_tag 'logo-header.png'
          .nav-collapse
            %ul.nav.pull-right
              %li.nav-center-vertical
                .btn-group.nav
                  %button{ class: 'btn btn-large btn-inverse'} Support
                  %a{ class: 'btn btn-large btn-inverse', href: "/#purchases"} Account
              - if user_signed_in?
                %li.nav-center-vertical
                  %p Logged In as:
                  %p= current_user.email
                %li.nav-center-vertical
                  = link_to "Log Out", destroy_user_session_path, class: 'btn btn-large btn-inverse test', method: 'delete'
              - else
                %li.nav-center-vertical
                  .btn-group.nav
                    = link_to "Log In", new_user_session_path, class: 'btn btn-large btn-inverse'
                    = link_to "Sign Up", new_user_registration_path, class: 'btn btn-large btn-inverse'
    .container
      .row
      - if flash[:notice]
        %div.span9.alert#notice
          %button{class: 'close', data: {dismiss: 'alert'}} &times;
          %p#notice= flash[:notice]
      - if flash[:alert]
        %div.alert.span9.alert-error
          %a{class: 'close', data: {dismiss: 'alert'}, href: '#'} &times;
          = flash[:alert]
    %ul.breadcrumb.no-background
      %li
        = link_to 'Dashboard', '#'
        %span.divider /
      %li.active
        = link_to 'Select Meals', '#'
    .container
      .row
        = yield :container
        #cart.span3
          .box
            .top
              %h2 Lunch Bag
            %div.lunch_bag
          .buy_button
    #footer
      = render 'layouts/footer'
