!!!
%html
  %head
    %title Lunchon.co
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = javascript_include_tag "bootstrap.min.js"
    = csrf_meta_tag
  %body.wooden
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container
          %a{ :class => 'btn btn-navbar', 'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to  root_path, class: 'brand' do
            =image_tag 'logo.png', height: '53px', width: '211px', class: 'header_image'
          .nav-collapse
            %ul.nav.pull-right
              %li.nav-center-vertical
                .btn-group.nav
                  %button{ class: 'btn btn-large btn-inverse'} How it Works
                  %button{ class: 'btn btn-large btn-inverse'} Account
                  %button{ class: 'btn btn-large btn-inverse'} Support
                - if user_signed_in?
                  %li.nav-center-vertical
                    %p Logged In as:
                    %p= current_user.email
                  %li.nav-center-vertical
                    = link_to "Log Out", destroy_user_session_path, class: 'btn btn-large btn-inverse log-out', method: 'delete'
                - else
                  %li.nav-center-vertical
                    .btn-group.nav
                      = link_to "Log In", new_user_session_path, class: 'btn btn-large btn-inverse', id: 'login-button'
                      = link_to "Sign Up", new_user_registration_path, class: 'btn btn-large btn-inverse', id: 'signup-button'    
    .container
      .row.top_row
        = yield :container
        #cart.span3
          .box
            .top
              %h2 Lunch Bag
            %div.lunch_bag
          .buy_button
    #footer
      = render 'layouts/footer'
    = yield    
    
